<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <%# <th>First name</th>
      <th>Last name</th> %>
      <th>Product Name</th>
      <th>Product Count</th>
      <th>Product ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <!--  <td><%= customer.first_name %></td> -->
